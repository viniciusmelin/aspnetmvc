@model App.Game.Models.AmigoModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

if (ViewBag.classe != null)
{
   <span class="hidden informacao" data-class="@ViewBag.classe">@ViewBag.msg</span>
}

<div class="col-md-8">
    <div class="card">

        @Html.AntiForgeryToken()

        <div class="container">
            <h4 class="subscribe-line">Adicionar Amigo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="form-group">
                    <div class="col-md-5">
                        <label for="PessoaMeId">Eu</label>
                        @Html.DropDownList("PessoaMeId", null, htmlAttributes: new { @class = "form-control", @readOnly = true })
                        @Html.ValidationMessageFor(model => model.PessoaMeId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-5">
                        <label for="PessoaFriendsId">Amigos</label>
                        @Html.DropDownList("PessoaFriendsId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PessoaFriendsId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


        </div>
        <div class="container">
            <div class="">
                <div class="form-group">
                    @Html.ActionLink("Voltar", "Index", "GameModels", new { @class = "btn btn-md btn-danger" })
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>

    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {
            if ($(".informacao").text() != "") {
                $.notify($(".informacao").text(), "error");
            }

        });
    </script>


}
