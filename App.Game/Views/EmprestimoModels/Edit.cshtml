@model App.Game.Models.EmprestimoModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="col-md-10">
    <div class="card">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="col-lg-offset-0">
            <h4 class="subscribe-line">Editar Emprestimo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                <div class="form-group">
                    <div class="col-lg-5">
                        @*@Html.LabelFor(model => model.Game.GameId, "Game_id")*@
                        <label for="Game_id)">Jogo</label>
                        @Html.DropDownList("Game_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Game_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-lg-5">
                        @Html.LabelFor(model => model.PessoaSolicitante.Id, "Amigo" /*htmlAttributes: new { @class = "control-label col-md-2" }*/)

                        @Html.DropDownList("PessoaFrindsId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Game_id, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="form-group">

                    <div class="col-lg-4 col-md-4 col-xs-12">
                        @Html.LabelFor(model => model.Data_emprestimo)
                        @* @Html.EditorFor(model => model.Data_emprestimo, new { htmlAttributes = new { @class = "form-control",@value = Model.Data_emprestimo, @type="date" } })*@
                        @Html.TextBoxFor(m => m.Data_emprestimo, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })

                        @Html.ValidationMessageFor(model => model.Data_emprestimo, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-lg-4 col-md-4 col-xs-12">
                        @Html.LabelFor(model => model.Data_devolucao)
                        @Html.TextBoxFor(model => model.Data_devolucao, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Data_devolucao, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-4 col-md-4 col-xs-12">
                        @Html.LabelFor(model => model.Data_devolvido)
                        @Html.EditorFor(model => model.Data_devolvido, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Data_devolvido, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-xs-12">
                    <a href="@Url.Action("Index","EmprestimoModels")" class="btn btn-danger">Voltar</a>
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>

            </div>

        </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
