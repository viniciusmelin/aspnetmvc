<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="assets/img/sidebar-5.jpg">
            <!--

                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
                Tip 2: you can also add an image using data-image tag

            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="https://s2it.com.br/" target="_blank" class="simple-text">
                        S2IT
                    </a>
                </div>
                <ul class="nav">
                    <li class="">
                        <a href="@Url.Action("Index","Home")">
                            <i class="pe-7s-home"></i>
                            <p>Painel</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","GameModels")">
                            <i class="pe-7s-note2"></i>
                            <p>Games</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","EmprestimoModels")">
                            <i class="pe-7s-wallet"></i>
                            <p>Games Emprestados</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","AmigoModels")">
                            <i class="pe-7s-users"></i>
                            <p>Cadastrar Amigo</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Dashboard</a>
                    </div>
                    <div class="collapse navbar-collapse">

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.Partial("_LoginPartial")
                            </li>
                            <li class="separator hidden-lg"></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="">
                    <div class="row">
                        @RenderBody()
                    </div>

                </div>

            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Home")">
                                    Inicial
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","GameModels")">
                                    Jogos
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","EmprestismoModels")">
                                    Emprestio
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "AmigoModels")">
                                    Amigos
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> <a href="https://www.linkedin.com/in/viniciusmelin/"> Vinicius Melin</a>
                    </p>
                </div>
            </footer>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/tema")


    @RenderSection("Scripts", required: false)
</body>
</html>
